{
    "name": "2amigos/yii2-croppie-widget",
    "description": "Renders a Croppie plugin. The fast, easy to use, image cropping plugin.",
    "type": "yii2-extension",
    "keywords": [
        "2amigos",
        "yii",
        "yii2",
        "yii 2",
        "extension",
        ":package_type",
        "yii2-croppie-widget"
    ],
    "homepage": "https://github.com/2amigos/yii2-croppie-widget",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "2amigOS! Consulting Group",
            "email": "hola@2amigos.us",
            "homepage": "http://2amigos.us",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/2amigos/yii2-croppie-widget/issues",
        "source": "https://github.com/2amigos/yii2-croppie-widget"
    },
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "^2.0",
        "bower-asset/croppie": "~2.5",
        "bower-asset/exif-js": "~2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "dosamigos\\croppie\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "preferred-install": {
            "*": "auto"
        },
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
